#!/bin/sh

set -eu

if [ ! $# -eq 2 ];
then
  echo "usage: $0 <jank source> <output binary>"
  exit 1
fi

here="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
tmp=$(mktemp -d)
echo "Working in $tmp"

pushd $here/.. > /dev/null
echo "Compiling to C++..."
lein run $1 > $tmp/jank-generated.hpp 2>&1
ret=$?
if [ $ret -eq 0 ];
then
  set -e
  echo "Compiling to binary..."
  g++ -O3 -std=c++14 -o $2 -I$here/../backend/c++/include -I$tmp $here/../backend/c++/src/main.cpp
  set +e
else
  cat $tmp/jank-generated.hpp
fi
popd > /dev/null

#rm -f $tmp/jank-generated.hpp
#rmdir $tmp
exit $ret
