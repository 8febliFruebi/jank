#!/usr/bin/env bash

set -eu

if [ ! $# -eq 2 ];
then
  echo "usage: $0 <jank source> <output binary>"
  exit 1
fi

here="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
tmp=$(mktemp -d)
echo "Working in $tmp"

cxx=${CXX:-c++}

pushd $here/.. > /dev/null
echo "Compiling to C++..."
lein run $1 > $tmp/jank-generated.hpp 2>&1
clang-format $tmp/jank-generated.hpp > latest-generated.hpp
ret=$?
if [ $ret -eq 0 ];
then
  echo "Compiling to binary..."
  $cxx -O0 -g -fsanitize=address -std=c++17 -o $2 -I$here/../backend/neo-c++/include -I$tmp $here/../backend/neo-c++/src/main.cpp
else
  cat $tmp/jank-generated.hpp
fi
popd > /dev/null

# TODO: Trap exit and delete
rm -f $tmp/jank-generated.hpp
rmdir $tmp
exit $ret
