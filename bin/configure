#!/usr/bin/env bash

set -euo pipefail

here="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
build_dir="${here}/../build"
/bin/rm -rf "${build_dir}"/{CMakeCache.txt,CMakeFiles}
/bin/mkdir -p "${build_dir}"

# Assume clang, but allow overriding.
export CC="${CC:-clang}"
export CXX="${CXX:-clang++}"

# Folly can fail, on Linux, with clang, since it struggles to find things like clock_gettime.
# We get around that by just trusting they're present.
export CXXFLAGS="${CXXFLAGS:-} -DFOLLY_HAVE_RECVMMSG -DFOLLY_HAVE_CLOCK_GETTIME"

cmake -S . -B "${build_dir}" "$@"
